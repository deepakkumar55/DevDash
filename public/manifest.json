{
  "manifest_version": 3,
  "name": "DevDash New Tab",
  "version": "1.0.0",
  "description": "A beautiful new tab dashboard for developers with customizable widgets",
  "permissions": [
    "storage",
    "bookmarks",
    "geolocation"
  ],
  "optional_permissions": [
    "identity"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "DevDash New Tab"
  }
}
